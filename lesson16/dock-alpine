FROM alpine:latest

RUN apk add --no-cache nginx

RUN mkdir -p /opt/www

RUN echo "<h1>CODEBY, hello from Alpine Nginx!</h1>" > /opt/www/index.html

RUN mkdir -p /etc/nginx/http.d
RUN echo 'server { listen 80; server_name localhost; location / { root /opt/www; index index.html; } }' > /etc/nginx/http.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]